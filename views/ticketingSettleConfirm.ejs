<%- include('partials/header') %>

<div class="container-fluid">
  <h1 class="h3 mb-4 text-gray-800"><%= title %></h1>

  <div class="card shadow-sm">
    <div class="card-header py-3">
      <h6 class="m-0 fw-bold text-primary">Settlement Details</h6>
    </div>
    <div class="card-body">
      <div class="row mb-3">
        <div class="col-md-6">
          <p><strong>Staff Member:</strong> <%= distribution.staff_name %></p>
          <p><strong>Ride:</strong> <%= distribution.ride_name %></p>
          <p><strong>Ticket Bundle:</strong> <%= distribution.distributed_start_number %> - <%= distribution.distributed_end_number %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Returned Start Number:</strong> <%= returned_start_number %></p>
          <p><strong>Tickets Sold:</strong> <span class="fw-bold"><%= tickets_sold %></span></p>
          <p><strong>Total Revenue:</strong> <span class="fw-bold fs-5 text-success">â‚¹<%= total_revenue.toFixed(2) %></span></p>
        </div>
      </div>

      <hr>

      <form action="/ticketing/settle/<%= distribution.id %>" method="POST">
        <input type="hidden" name="returned_start_number" value="<%= returned_start_number %>">
        
        <div class="row justify-content-center">
          <div class="col-md-6">
            <div class="mb-3">
              <label for="upi_amount" class="form-label">Enter UPI Amount Received (if any)</label>
              <input type="number" step="0.01" class="form-control" id="upi_amount" name="upi_amount" placeholder="0.00" autofocus>
            </div>
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-lg btn-success">Confirm & Settle</button>
              <a href="/ticketing/settle" class="btn btn-secondary">Cancel</a>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>