<%- include('partials/header') %>

<div class="container mt-4">
  <div class="page-header">
    <h1><i class="fas fa-heart-pulse"></i> Diagnostic: Booking Status Conflicts</h1>
    <p class="text-muted">This report identifies spaces with inconsistent booking statuses across different parts of the application.</p>
  </div>

  <div class="card">
    <div class="card-header">
      Conflict Report
    </div>
    <div class="card-body">
      <% if (conflictingSpaces.length > 0) { %>
        <div class="alert alert-danger">
          Found <strong><%= conflictingSpaces.length %></strong> space(s) with conflicting statuses out of <%= totalSpacesChecked %> checked.
        </div>
        <div class="table-responsive">
          <table class="table table-bordered table-striped">
            <thead class="thead-dark">
              <tr>
                <th>Space</th>
                <th>Type</th>
                <th>Active Bookings</th>
                <th>Inactive Bookings</th>
                <th>Dashboard Status</th>
                <th>Booking Form Status</th>
                <th>Conflict Type</th>
              </tr>
            </thead>
            <tbody>
              <% conflictingSpaces.forEach(space => { %>
                <tr>
                  <td><strong><%= space.name %></strong></td>
                  <td><%= space.type %></td>
                  <td><span class="badge badge-<%= space.active_bookings_count > 1 ? 'danger' : 'secondary' %>"><%= space.active_bookings_count %></span></td>
                  <td><span class="badge badge-info"><%= space.inactive_bookings_count %></span></td>
                  <td><span class="badge badge-<%= space.dashboard_status === 'Booked' ? 'warning' : 'success' %>"><%= space.dashboard_status %></span></td>
                  <td><span class="badge badge-<%= space.booking_form_status === 'Booked' ? 'warning' : 'success' %>"><%= space.booking_form_status %></span></td>
                  <td>
                    <% if (space.active_bookings_count > 1) { %>
                      <span class="text-danger font-weight-bold">Multiple Active Bookings</span>
                    <% } else { %>
                      <span class="text-warning">Status Mismatch</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="alert alert-success">
          <i class="fas fa-check-circle"></i> No conflicting booking statuses found. All <%= totalSpacesChecked %> spaces are consistent.
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('partials/footer') %>