<%- include('partials/header') %>

<div class="container-fluid">
  <h1 class="h3 mb-4"><%= title %></h1>

  <div class="card shadow-sm mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 fw-bold text-primary">Record Daily Sales</h6>
    </div>
    <div class="card-body">
      <form action="/ticketing/sales/add" method="POST">
        <div class="mb-3">
          <label for="sale_date" class="form-label">Sale Date</label>
          <input type="date" class="form-control" id="sale_date" name="sale_date" value="<%= new Date().toISOString().split('T')[0] %>" required>
        </div>
        <h6 class="mt-4">Ticket Counts:</h6>
        <% if (rates.length === 0) { %>
          <p class="text-muted">Please add ticket types and rates first.</p>
        <% } else { %>
          <div class="row">
            <% rates.forEach(rate => { %>
              <div class="col-md-6 mb-3">
                <label for="count-<%= rate.id %>" class="form-label"><%= rate.name %> (â‚¹<%= rate.rate %>)</label>
                <input type="number" class="form-control" id="count-<%= rate.id %>" name="count-<%= rate.id %>" min="0" placeholder="0">
              </div>
            <% }) %>
          </div>
        <% } %>
        <button type="submit" class="btn btn-primary mt-3" <%= rates.length === 0 ? 'disabled' : '' %>>Record Sales & Add to Income</button>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>