<%- include('partials/header') %>

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Left Column: Add/Edit Form -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><%= space ? 'Edit Space' : 'Add New Space' %></h5>
                </div>
                <div class="card-body">
                    <form action="/space/<%= space ? 'edit/' + space.id : 'add' %>" method="POST">
                        <div class="mb-3">
                            <label for="type" class="form-label">Type</label>
                            <select class="form-select" id="type" name="type" required>
                                <option value="Pavilion" <%= (space && space.type === 'Pavilion') ? 'selected' : '' %>>Pavilion</option>
                                <option value="Stall" <%= (space && space.type === 'Stall') ? 'selected' : '' %>>Stall</option>
                                <option value="Booth" <%= (space && space.type === 'Booth') ? 'selected' : '' %>>Booth</option>
                                <option value="Other" <%= (space && space.type === 'Other') ? 'selected' : '' %>>Other</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name" value="<%= space ? space.name : '' %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="size" class="form-label">Size</label>
                            <input type="text" class="form-control" id="size" name="size" value="<%= space ? space.size : '' %>">
                        </div>
                        <div class="mb-3">
                            <label for="rent_amount" class="form-label">Rent Amount</label>
                            <input type="number" class="form-control" id="rent_amount" name="rent_amount" value="<%= space ? space.rent_amount : '' %>" step="0.01">
                        </div>
                        <div class="mb-3">
                            <label for="facilities" class="form-label">Facilities</label>
                            <input type="text" class="form-control" id="facilities" name="facilities" value="<%= space ? space.facilities : '' %>">
                        </div>
                        <div class="mb-3">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" class="form-control" id="location" name="location" value="<%= space ? space.location : '' %>">
                        </div>
                        <div class="d-flex justify-content-end">
                            <% if (space) { %>
                                <a href="/space/add" class="btn btn-secondary me-2">Cancel Edit</a>
                            <% } %>
                            <button type="submit" class="btn btn-primary"><%= space ? 'Update Space' : 'Add Space' %></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right Column: Spaces List -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Existing Spaces</h5>
                    <form action="/space/add" method="GET" class="d-flex align-items-center">
                        <label for="status-filter" class="form-label me-2 mb-0">Show:</label>
                        <select id="status-filter" name="status" class="form-select form-select-sm" onchange="this.form.submit()">
                            <option value="active" <%= filters.status === 'active' ? 'selected' : '' %>>Active</option>
                            <option value="inactive" <%= filters.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                            <option value="all" <%= filters.status === 'all' ? 'selected' : '' %>>All</option>
                        </select>
                    </form>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Size</th>
                                    <th>Rent</th>
                                    <th>Status (Current Session)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% spaces.forEach(s => { %>
                                    <tr class="<%= s.is_active ? '' : 'table-secondary text-muted' %>">
                                        <td><%= s.name %></td>
                                        <td><%= s.type %></td>
                                        <td><%= s.size %></td>
                                        <td><%= s.rent_amount ? `â‚¹${s.rent_amount.toFixed(2)}` : '' %></td>
                                        <td><span class="badge <%= s.session_status === 'Booked' ? 'bg-danger' : 'bg-success' %>"><%= s.session_status %></span></td>
                                        <td>
                                            <a href="/space/edit/<%= s.id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                                            <% if (s.is_active) { %>
                                                <form action="/space/delete/<%= s.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to deactivate this space?');">
                                                    <button type="submit" class="btn btn-sm btn-outline-warning">Deactivate</button>
                                                </form>
                                            <% } else { %>
                                                <form action="/space/reactivate/<%= s.id %>" method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-success">Reactivate</button>
                                                </form>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>