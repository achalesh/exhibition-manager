<%- include('partials/header') %>

<div class="container mt-4">
  <div class="card mx-auto" style="max-width: 600px;">
    <div class="card-header">
      <h2><%= title %></h2>
    </div>
    <div class="card-body">
      <p>Set the default number of free materials provided for each new material issue record.</p>
      <form action="/settings/materials" method="POST">
        <div class="mb-3">
          <label for="free_tables" class="form-label">Default Free Tables</label>
          <input 
            type="number" 
            class="form-control" 
            id="free_tables" 
            name="free_tables" 
            value="<%= defaults.free_tables %>" 
            required>
        </div>
        <div class="mb-3">
          <label for="free_chairs" class="form-label">Default Free Chairs</label>
          <input 
            type="number" 
            class="form-control" 
            id="free_chairs" 
            name="free_chairs" 
            value="<%= defaults.free_chairs %>" 
            required>
        </div>
        <button type="submit" class="btn btn-primary">Save Settings</button>
        <a href="/material/issue" class="btn btn-secondary">Cancel</a>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>