<%- include('partials/header') %>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header">
            <h1 class="h4 mb-0"><%= title %></h1>
        </div>
        <div class="card-body">
            <form action="/settings/materials" method="POST">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="plywood_free" class="form-label">Free Plywood</label>
                        <input type="number" class="form-control" id="plywood_free" name="plywood_free" value="<%= defaults.plywood_free %>" required>
                    </div>
                    <div class="col-md-3">
                        <label for="table_free" class="form-label">Free Tables</label>
                        <input type="number" class="form-control" id="table_free" name="table_free" value="<%= defaults.table_free %>" required>
                    </div>
                    <div class="col-md-3">
                        <label for="chair_free" class="form-label">Free Chairs</label>
                        <input type="number" class="form-control" id="chair_free" name="chair_free" value="<%= defaults.chair_free %>" required>
                    </div>
                    <div class="col-md-3">
                        <label for="rod_free" class="form-label">Free Rods</label>
                        <input type="number" class="form-control" id="rod_free" name="rod_free" value="<%= defaults.rod_free %>" required>
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Save Defaults</button>
                    <a href="/dashboard" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>