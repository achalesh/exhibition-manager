<%- include('partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1><%= title %></h1>
        <a href="/report/materials/csv" class="btn btn-success">
            <i class="bi bi-download me-2"></i> Download CSV
        </a>
    </div>

    <!-- Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form action="/report/materials" method="GET">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label for="q" class="form-label">Search</label>
                        <input type="text" class="form-control" id="q" name="q" placeholder="Name, Unique ID, or Client..." value="<%= filters.q %>">
                    </div>
                    <div class="col-md-3">
                        <label for="status" class="form-label">Status</label>
                        <select id="status" name="status" class="form-select">
                            <option value="all" <%= filters.status === 'all' ? 'selected' : '' %>>All</option>
                            <option value="Available" <%= filters.status === 'Available' ? 'selected' : '' %>>Available</option>
                            <option value="Issued" <%= filters.status === 'Issued' ? 'selected' : '' %>>Issued</option>
                            <option value="Damaged" <%= filters.status === 'Damaged' ? 'selected' : '' %>>Damaged</option>
                        </select>
                    </div>
                    <div class="col-md-auto">
                        <button type="submit" class="btn btn-primary">Filter</button>
                        <a href="/report/materials" class="btn btn-secondary">Clear</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Report Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Unique ID</th>
                            <th>Issued To</th>
                            <th>Space / Contact</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (materials.length > 0) { %>
                            <% materials.forEach(material => { %>
                                <tr>
                                    <td><%= material.name %></td>
                                    <td><%= material.description || 'N/A' %></td>
                                    <td>
                                        <% const statusColors = { 'Available': 'success', 'Issued': 'warning', 'Damaged': 'danger' }; %>
                                        <span class="badge bg-<%= statusColors[material.status] || 'secondary' %>">
                                            <%= material.status %>
                                        </span>
                                    </td>
                                    <td><code><%= material.unique_id %></code></td>
                                    <td>
                                        <% if (material.issued_to_client) { %>
                                            <%= material.issued_to_client %>
                                        <% } else { %>
                                            ---
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (material.space_name) { %>
                                            <strong><%= material.space_name %></strong><br>
                                            <small class="text-muted"><%= material.contact_number %></small>
                                        <% } else { %>
                                            ---
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <td colspan="6" class="text-center text-muted">No materials found matching your criteria.</td>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>