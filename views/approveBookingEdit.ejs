<%- include('partials/header') %>

<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h2><%= title %></h2>
      <p class="mb-0">Requested by <strong><%= editRequest.username %></strong> on <%= new Date(editRequest.request_date).toLocaleString() %></p>
    </div>
    <div class="card-body">
      <div class="row">
        <!-- Current Data -->
        <div class="col-md-6">
          <h4>Current Data</h4>
          <table class="table table-sm table-bordered">
            <% Object.keys(proposedData).forEach(key => { %>
              <tr>
                <td style="width: 40%;"><strong><%= key.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase()) %></strong></td>
                <td><%= currentBooking[key] %></td>
              </tr>
            <% }); %>
          </table>
        </div>

        <!-- Proposed Changes -->
        <div class="col-md-6">
          <h4>Proposed Changes</h4>
          <table class="table table-sm table-bordered">
            <% 
              const fieldsToCompare = Object.keys(proposedData);
              fieldsToCompare.forEach(key => { 
                const currentValue = String(currentBooking[key] || '');
                const proposedValue = String(proposedData[key] || '');
                const isChanged = currentValue !== proposedValue;
            %>
              <tr class="<%= isChanged ? 'table-warning' : '' %>">
                <td style="width: 40%;"><strong><%= key.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase()) %></strong></td>
                <td>
                  <% if (isChanged) { %>
                    <del class="text-danger"><%= currentValue %></del>
                    <br>
                    <ins class="text-success"><%= proposedValue %></ins>
                  <% } else { %>
                    <%= proposedValue %>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </table>
        </div>
      </div>

      <hr>

      <!-- Action Buttons -->
      <div class="d-flex justify-content-end">
        <button type="button" class="btn btn-danger me-2" data-bs-toggle="modal" data-bs-target="#rejectModal">
          <i class="bi bi-x-circle me-1"></i> Reject
        </button>
        <form action="/booking/approve/<%= editRequest.id %>" method="POST" onsubmit="return confirm('Are you sure you want to approve and apply these changes?');">
          <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle me-1"></i> Approve & Save
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Rejection Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/booking/reject/<%= editRequest.id %>" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="rejectModalLabel">Reason for Rejection</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="rejection_reason" class="form-label">Please provide a reason for rejecting this edit request. This will be shown to the user.</label>
            <textarea class="form-control" id="rejection_reason" name="rejection_reason" rows="3" required></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-danger">Confirm Rejection</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>