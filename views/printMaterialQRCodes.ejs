<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        @media print {
            body {
                -webkit-print-color-adjust: exact;
            }
            .no-print {
                display: none;
            }
            .qr-item {
                page-break-inside: avoid;
            }
        }
        .qr-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 25px;
        }
        .qr-item {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
        }
        .qr-item img {
            max-width: 100%;
            height: auto;
            margin-bottom: 5px;
        }
        .qr-id {
            font-family: 'Courier New', Courier, monospace;
            font-size: 0.75em;
            word-break: break-all;
            font-weight: bold;
        }
        .material-name {
            font-size: 0.8em;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container-fluid mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4 no-print">
            <h1 class="h3 mb-0"><%= title %></h1>
            <div class="d-flex align-items-center gap-3">
                <form action="/materials/print-qrcodes" method="GET" class="d-flex align-items-center gap-2">
                    <label for="name-filter" class="form-label mb-0">Filter by Name:</label>
                    <select name="name" id="name-filter" class="form-select form-select-sm" onchange="this.form.submit()">
                        <option value="all" <%= currentFilter === 'all' ? 'selected' : '' %>>All Materials</option>
                        <% materialNames.forEach(name => { %>
                            <option value="<%= name %>" <%= currentFilter === name ? 'selected' : '' %>><%= name %></option>
                        <% }) %>
                    </select>
                </form>
                <button onclick="window.print()" class="btn btn-primary">
                    <i class="bi bi-printer me-2"></i>Print
                    <% if (currentFilter !== 'all') { %>
                        <%= currentFilter %>s
                    <% } %>
                </button>
            </div>
        </div>

        <div class="qr-grid">
            <% materials.forEach(material => { %>
                <div class="qr-item">
                    <div class="material-name"><%= material.name %></div>
                    <img src="<%= material.qr_code_path %>" alt="QR Code for <%= material.unique_id %>">
                    <div class="qr-id"><%= material.unique_id %></div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>