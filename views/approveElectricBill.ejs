<%- include('partials/header') %>

<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h2><%= title %></h2>
      <p class="mb-0">Requested by <strong><%= editRequest.username %></strong> on <%= new Date(editRequest.request_date).toLocaleString() %></p>
    </div>
    <div class="card-body">
      <div class="row">
        <!-- Current Data -->
        <div class="col-md-6">
          <h4>Current Data</h4>
          <dl class="row">
            <dt class="col-sm-4">Sl. No.</dt>
            <dd class="col-sm-8"><%= currentBill.sl_no || 'N/A' %></dd>
            <dt class="col-sm-4">Remarks</dt>
            <dd class="col-sm-8"><%= currentBill.remarks || 'N/A' %></dd>
            <dt class="col-sm-4">Items</dt>
            <dd class="col-sm-8">
              <% currentBill.items.forEach(item => { %>
                <%= item.name %> (Qty: <%= item.quantity %>)<br>
              <% }); %>
            </dd>
            <dt class="col-sm-4">Total Amount</dt>
            <dd class="col-sm-8"><strong>₹<%= (currentBill.total_amount || 0).toFixed(2) %></strong></dd>
          </dl>
        </div>

        <!-- Proposed Changes -->
        <div class="col-md-6">
          <h4>Proposed Changes</h4>
          <dl class="row">
            <dt class="col-sm-4">Sl. No.</dt>
            <dd class="col-sm-8 <%= String(currentBill.sl_no || '') !== String(proposedData.sl_no || '') ? 'bg-warning' : '' %>"><%= proposedData.sl_no || 'N/A' %></dd>
            <dt class="col-sm-4">Remarks</dt>
            <dd class="col-sm-8 <%= String(currentBill.remarks || '') !== String(proposedData.remarks || '') ? 'bg-warning' : '' %>"><%= proposedData.remarks || 'N/A' %></dd>
            <dt class="col-sm-4">Items</dt>
            <dd class="col-sm-8 <%= JSON.stringify(currentBill.items) !== JSON.stringify(proposedData.items) ? 'bg-warning' : '' %>">
              <% proposedData.items.forEach(item => { %>
                <%= item.name %> (Qty: <%= item.quantity %>)<br>
              <% }); %>
            </dd>
            <dt class="col-sm-4">Total Amount</dt>
            <dd class="col-sm-8 <%= (currentBill.total_amount || 0) != proposedData.total_amount ? 'bg-warning' : '' %>"><strong>₹<%= parseFloat(proposedData.total_amount).toFixed(2) %></strong></dd>
          </dl>
        </div>
      </div>

      <hr>

      <!-- Action Buttons -->
      <div class="d-flex justify-content-end">
        <button type="button" class="btn btn-danger me-2" data-bs-toggle="modal" data-bs-target="#rejectModal">
          <i class="bi bi-x-circle me-1"></i> Reject
        </button>
        <form action="/electric/approve/<%= editRequest.id %>" method="POST" onsubmit="return confirm('Are you sure you want to approve and apply these changes?');">
          <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle me-1"></i> Approve & Save
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Rejection Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/electric/reject/<%= editRequest.id %>" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="rejectModalLabel">Reason for Rejection</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="rejection_reason" class="form-label">Please provide a reason for rejecting this edit. This will be shown to the user.</label>
            <textarea class="form-control" id="rejection_reason" name="rejection_reason" rows="3" required></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-danger">Confirm Rejection</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>