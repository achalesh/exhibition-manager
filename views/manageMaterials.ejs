<%- include('partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1><%= title %></h1>
        <div>
            <a href="/materials/bulk-upload" class="btn btn-info me-2">
                <i class="bi bi-upload me-2"></i> Bulk Upload
            </a>
            <a href="/materials/add" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i> Add New Material
            </a>
        </div>
    </div>

    <% if (message) { %>
        <div class="alert alert-success"><%= message %></div>
    <% } %>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th class="text-center">QR Code</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% materials.forEach(material => { %>
                            <tr>
                                <td><%= material.name %></td>
                                <td><%= material.description || 'N/A' %></td>
                                <td>
                                    <% const statusColors = { 'Available': 'success', 'Issued': 'warning', 'Damaged': 'danger' }; %>
                                    <span class="badge bg-<%= statusColors[material.status] || 'secondary' %>">
                                        <%= material.status %>
                                    </span>
                                </td>
                                <td class="text-center">
                                    <img src="<%= material.qr_code_path %>" alt="QR Code for <%= material.name %>" style="width: 80px; height: 80px;">
                                </td>
                                <td class="text-end">
                                    <form action="/materials/delete/<%= material.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>