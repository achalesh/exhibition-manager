<%- include('partials/header') %>

<div class="container-fluid">
  <h1 class="h3 mb-4 text-gray-800"><%= title %></h1>

  <div class="row">

    <!-- Financial Reports -->
    <div class="col-lg-6 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-header py-3">
          <h6 class="m-0 fw-bold text-primary">Financial Reports</h6>
        </div>
        <div class="list-group list-group-flush">
          <a href="/report/payment-received" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><i class="bi bi-cash-coin me-2"></i>Payment Received Report</h5>
            </div>
            <p class="mb-1 text-muted small">View all individual payments received across all categories.</p>
          </a>
          <a href="/report/due-list" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><i class="bi bi-file-earmark-text me-2"></i>Due List Report</h5>
            </div>
            <p class="mb-1 text-muted small">See a consolidated list of all outstanding dues by exhibitor.</p>
          </a>
        </div>
      </div>
    </div>

    <!-- Operational Reports -->
    <div class="col-lg-6 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-header py-3">
          <h6 class="m-0 fw-bold text-primary">Operational & Booking Reports</h6>
        </div>
        <div class="list-group list-group-flush">
          <a href="/report/booking-summary" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><i class="bi bi-journal-text me-2"></i>Booking Summary Report</h5>
            </div>
            <p class="mb-1 text-muted small">A summary of all bookings with key financial details.</p>
          </a>
          <a href="/report/exhibitors" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><i class="bi bi-people-fill me-2"></i>Exhibitors List</h5>
            </div>
            <p class="mb-1 text-muted small">A complete list of all exhibitors with their contact details.</p>
          </a>
          <a href="/report/materials" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><i class="bi bi-box-seam me-2"></i>Material Issue Report</h5>
            </div>
            <p class="mb-1 text-muted small">Track all materials issued to exhibitors and their payment status.</p>
          </a>
          <a href="/report/electric-list" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><i class="bi bi-lightning-charge-fill me-2"></i>Electric Bills Report</h5>
            </div>
            <p class="mb-1 text-muted small">View a detailed list of all electric bills issued.</p>
          </a>
          <a href="/report/shed-list" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><i class="bi bi-shop me-2"></i>Shed Allocation Report</h5>
            </div>
            <p class="mb-1 text-muted small">See which exhibitors have been allocated additional sheds.</p>
          </a>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/footer') %>