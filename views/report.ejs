<%- include('partials/header') %>

<div class="container-fluid">
  <h1 class="h3 mb-4 text-gray-800"><%= title %></h1>

  <div class="row">
    <!-- Due List Report Card -->
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><i class="bi bi-cash-stack me-2"></i>Due List Report</h5>
          <p class="card-text">View a detailed list of all outstanding payments from exhibitors for the selected session.</p>
          <a href="/report/due-list" class="btn btn-primary mt-auto">View Report</a>
        </div>
      </div>
    </div>

    <!-- Payment Received Report Card -->
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><i class="bi bi-wallet2 me-2"></i>Payment Received Report</h5>
          <p class="card-text">View a detailed log of all payments received during the selected session.</p>
          <a href="/report/payment-received" class="btn btn-primary mt-auto">View Report</a>
        </div>
      </div>
    </div>

    <!-- Exhibitors Report Card -->
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><i class="bi bi-person-lines-fill me-2"></i>Exhibitors List</h5>
          <p class="card-text">View a complete list of all exhibitors and their contact details for the session.</p>
          <a href="/report/exhibitors" class="btn btn-primary mt-auto">View Report</a>
        </div>
      </div>
    </div>

    <!-- Booking Summary Report Card -->
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><i class="bi bi-journal-text me-2"></i>Booking Summary</h5>
          <p class="card-text">Get a complete summary of all bookings for the selected session.</p>
          <a href="/report/booking-summary" class="btn btn-primary mt-auto">View Report</a>
        </div>
      </div>
    </div>

    <!-- Audit Log Report Card -->
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><i class="bi bi-shield-check me-2"></i>Audit Log</h5>
          <p class="card-text">Track all significant user actions and changes within the selected session.</p>
          <a href="/report/audit-log" class="btn btn-primary mt-auto">View Report</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>