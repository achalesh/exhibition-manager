<%- include('partials/header') %>

<div class="container-fluid">
  <h2 class="mb-4"><%= title %></h2>

  <div class="row">
    <!-- Financial Reports -->
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-cash-coin me-2"></i>Financial Reports</h5>
        </div>
        <div class="list-group list-group-flush">
          <a href="/report/payment-received" class="list-group-item list-group-item-action">Payment Received Report</a>
          <a href="/report/exhibitor-dues" class="list-group-item list-group-item-action">Exhibitor Dues (Rent)</a>
          <a href="/report/exhibitor-charges" class="list-group-item list-group-item-action">Exhibitor Charges (Full)</a>
          <a href="/report/due-list" class="list-group-item list-group-item-action">Due List Report</a>
          <a href="/accounting" class="list-group-item list-group-item-action">Income & Expenditure</a>
          <a href="/accounting/report/by-category" class="list-group-item list-group-item-action">Accounting by Category</a>
        </div>
      </div>
    </div>

    <!-- Booking & Exhibitor Reports -->
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0"><i class="bi bi-person-lines-fill me-2"></i>Booking & Exhibitor Reports</h5>
        </div>
        <div class="list-group list-group-flush">
          <a href="/report/booking-summary" class="list-group-item list-group-item-action">Booking Summary Report</a>
          <a href="/report/exhibitors" class="list-group-item list-group-item-action">Exhibitors List</a>
          <a href="/booking/report/cancelled" class="list-group-item list-group-item-action">Cancelled Bookings Report</a>
        </div>
      </div>
    </div>

    <!-- Asset & Allocation Reports -->
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-header bg-info text-dark">
          <h5 class="mb-0"><i class="bi bi-box-seam me-2"></i>Asset & Allocation Reports</h5>
        </div>
        <div class="list-group list-group-flush">
          <a href="/report/allocated-materials" class="list-group-item list-group-item-action">Allocated Materials Report</a>
          <a href="/report/material-issues" class="list-group-item list-group-item-action">Material Issues (Form-based)</a>
          <a href="/report/damaged-materials" class="list-group-item list-group-item-action text-danger">Damaged Materials Report</a>
          <a href="/report/materials" class="list-group-item list-group-item-action">Material Stock Report (QR)</a>
          <a href="/report/electric-list" class="list-group-item list-group-item-action">Electric Bills Report</a>
          <a href="/report/shed-list" class="list-group-item list-group-item-action">Shed Allocation Report</a>
        </div>
      </div>
    </div>

    <!-- Ticketing Reports -->
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-header bg-secondary text-white">
          <h5 class="mb-0"><i class="bi bi-ticket-perforated me-2"></i>Ticketing Reports</h5>
        </div>
        <div class="list-group list-group-flush">
          <a href="/ticketing/report/daily-sales" class="list-group-item list-group-item-action">Daily Ticket Sales</a>
          <a href="/report/sales-by-staff" class="list-group-item list-group-item-action">Sales by Staff</a>
          <a href="/ticketing/report/staff-settlements" class="list-group-item list-group-item-action">Staff Settlements (Short/Excess)</a>
        </div>
      </div>
    </div>

    <!-- Admin Reports -->
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-header bg-danger text-white">
          <h5 class="mb-0"><i class="bi bi-shield-lock me-2"></i>Admin Reports</h5>
        </div>
        <div class="list-group list-group-flush">
          <a href="/report/audit-log" class="list-group-item list-group-item-action">Audit Log</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>