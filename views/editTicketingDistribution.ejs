<%- include('partials/header') %>

<div class="container-fluid">
  <h1 class="h3 mb-4"><%= title %></h1>

  <div class="card shadow-sm mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 fw-bold text-primary">Edit Distribution #<%= distribution.id %></h6>
    </div>
    <div class="card-body">
      <form action="/ticketing/distribute/edit/<%= distribution.id %>" method="POST" class="row g-3 align-items-end">
        <div class="col-md-5">
          <label for="staff_id" class="form-label">Staff Member</label>
          <select id="staff_id" name="staff_id" class="form-select" required>
            <% staff.forEach(s => { %>
              <option value="<%= s.id %>" <%= distribution.staff_id == s.id ? 'selected' : '' %>><%= s.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-5">
          <label for="ride_id" class="form-label">Ride</label>
          <select id="ride_id" name="ride_id" class="form-select" required>
            <% rides.forEach(ride => { %>
              <option value="<%= ride.id %>" <%= distribution.rate_id == ride.id ? 'selected' : '' %>><%= ride.name %> (₹<%= ride.rate %>)</option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-primary w-100">Update</button>
        </div>
      </form>
    </div>
  </div>

  <a href="/ticketing/distribute" class="btn btn-secondary">« Back to Distribute Tickets</a>
</div>

<%- include('partials/footer') %>