<%- include('partials/header') %>

<div class="container mt-4">
  <div class="page-header d-flex justify-content-between align-items-center">
    <h1><i class="bi bi-journal-check"></i> Review Weekly Settlements</h1>
    <button type="submit" form="settlement-form" class="btn btn-success"><i class="bi bi-check2-circle"></i> Settle Selected</button>
  </div>
  <p class="text-muted">Review all unsettled cash shortages and excesses. Select transactions and click "Settle Selected" to finalize them for the week.</p>

  <form action="/ticketing/cash-settle/review" method="POST" id="settlement-form">
    <% if (Object.keys(settlementsByStaff).length > 0) { %>
      <% for (const staffName in settlementsByStaff) { %>
        <% const staffData = settlementsByStaff[staffName]; %>
        <div class="card mb-4">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-person"></i> <%= staffName %></h5>
            <span class="badge bg-<%= staffData.total_difference < 0 ? 'danger' : 'warning' %> fs-6">
              Total Unsettled: ₹<%= staffData.total_difference.toLocaleString('en-IN') %>
            </span>
          </div>
          <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
              <thead class="thead-light">
                <tr>
                  <th style="width: 30px;"><input type="checkbox" class="form-check-input" onchange="toggleAll(this, '<%= staffName.replace(/\s/g, '-') %>')"></th>
                  <th>Date</th>
                  <th class="text-end">Expected (₹)</th>
                  <th class="text-end">Actual (₹)</th>
                  <th class="text-end">Difference (₹)</th>
                  <th>Notes</th>
                </tr>
              </thead>
              <tbody>
                <% staffData.transactions.forEach(tx => { %>
                  <tr>
                    <td><input type="checkbox" class="form-check-input staff-<%= staffName.replace(/\s/g, '-') %>" name="settlement_ids" value="<%= tx.id %>"></td>
                    <td><%= new Date(tx.settlement_date).toLocaleDateString('en-IN', { day: 'numeric', month: 'short' }) %></td>
                    <td class="text-end"><%= tx.expected_amount.toLocaleString('en-IN') %></td>
                    <td class="text-end"><%= tx.actual_amount.toLocaleString('en-IN') %></td>
                    <td class="text-end fw-bold <%= tx.difference < 0 ? 'text-danger' : 'text-success' %>">
                      <%= tx.difference.toLocaleString('en-IN') %>
                    </td>
                    <td><small><%= tx.notes || '-' %></small></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      <% } %>
    <% } else { %>
      <div class="alert alert-success">
        <i class="fas fa-check-circle"></i> All staff settlements are up to date. There are no pending amounts to review.
      </div>
    <% } %>
  </form>
</div>

<script>
  function toggleAll(source, staffClass) {
    const checkboxes = document.querySelectorAll(`.staff-${staffClass}`);
    for (const checkbox of checkboxes) {
      checkbox.checked = source.checked;
    }
  }
</script>

<%- include('partials/footer') %>