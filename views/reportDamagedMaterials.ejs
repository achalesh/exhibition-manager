<%- include('partials/header') %>

<div class="container-fluid">
  <h2 class="mb-4"><%= title %></h2>

  <!-- Search Form -->
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <form action="/report/damaged-materials" method="GET" class="row g-3 align-items-center">
        <div class="col-md-5">
          <input type="text" name="q" class="form-control" placeholder="Search by Name or Unique ID..." value="<%= filters.q %>">
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Search</button>
          <% if (filters.q) { %>
            <a href="/report/damaged-materials" class="btn btn-outline-secondary ms-2">Clear</a>
          <% } %>
        </div>
        <div class="col-auto">
          <a href="/report/damaged-materials/csv?q=<%= filters.q %>" class="btn btn-success"><i class="bi bi-download me-1"></i> Download CSV</a>
        </div>
      </form>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Unique ID</th>
              <th>Description</th>
              <th>Date Added</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (materials && materials.length > 0) { %>
              <% materials.forEach((material, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= material.name %></td>
                  <td class="font-monospace"><%= material.unique_id %></td>
                  <td><%= material.description || 'N/A' %></td>
                  <td><%= new Date(material.created_at).toLocaleDateString() %></td>
                  <td>
                    <form action="/materials/update-status/<%= material.id %>" method="POST" onsubmit="return confirm('Mark this item as Available?');">
                      <input type="hidden" name="newStatus" value="Available">
                      <input type="hidden" name="redirectUrl" value="/report/damaged-materials">
                      <button type="submit" class="btn btn-sm btn-success">Mark as Available</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="6" class="text-center text-muted">No damaged materials found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>