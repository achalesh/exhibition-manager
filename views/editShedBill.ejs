<%- include('partials/header') %>

<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h2><%= title %></h2>
    </div>
    <div class="card-body">
      <form action="/shed/bill/edit/<%= bill.id %>" method="POST">
        
        <div class="row mb-3">
          <div class="col-md-12">
            <label for="booking_id" class="form-label">Select Exhibitor</label>
            <select class="form-select" id="booking_id" name="booking_id" required>
              <option value="" disabled>-- Choose an Exhibitor --</option>
              <% bookings.forEach(b => { %>
                <option value="<%= b.id %>" <%= b.id == bill.booking_id ? 'selected' : '' %>>
                  <%= b.exhibitor_name %> - [<%= b.space_name %>]
                </option>
              <% }) %>
            </select>
          </div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <input type="text" class="form-control" id="description" name="description" value="<%= bill.description %>" required>
        </div>

        <div class="mb-3">
          <label for="amount" class="form-label">Amount (â‚¹)</label>
          <input type="number" class="form-control" id="amount" name="amount" value="<%= bill.amount %>" required min="0.01" step="0.01">
        </div>

        <button type="submit" class="btn btn-primary">Update Bill</button>
        <a href="/booking/details-full/<%= bill.booking_id %>" class="btn btn-secondary">Cancel</a>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>