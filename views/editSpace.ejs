<%- include('partials/header') %>

<h2 class="mb-3">Edit Exhibition Space</h2>

<form method="POST" action="/space/edit/<%= space.id %>" class="needs-validation" novalidate>
  
  <div class="mb-3">
    <label class="form-label">Space Type</label>
    <select class="form-select" name="type" required>
      <option value="Pavilion" <%= space.type === 'Pavilion' ? 'selected' : '' %>>🏢 Pavilion</option>
      <option value="Stall" <%= space.type === 'Stall' ? 'selected' : '' %>>🧺 Stall</option>
      <option value="Booth" <%= space.type === 'Booth' ? 'selected' : '' %>>🎪 Booth</option>
      <option value="SpecialZone" <%= space.type === 'SpecialZone' ? 'selected' : '' %>>🔲 Special Zone</option>
    </select>
  </div>

  <div class="mb-3">
    <label class="form-label">Space Name</label>
    <input type="text" class="form-control" name="name" value="<%= space.name %>" required>
  </div>

  <div class="mb-3">
    <label class="form-label">Size</label>
    <input type="text" class="form-control" name="size" value="<%= space.size %>">
  </div>

  <div class="mb-3">
    <label class="form-label">Rent Amount (₹)</label>
    <input type="number" class="form-control" name="rent_amount" value="<%= space.rent_amount %>" required>
  </div>
  
  <div class="mb-3">
    <label class="form-label">Facilities</label>
    <input type="text" class="form-control" name="facilities" value="<%= space.facilities %>">
  </div>

  <div class="mb-3">
    <label class="form-label">Location</label>
    <input type="text" class="form-control" name="location" value="<%= space.location %>">
  </div>

  <div class="mb-3">
    <label class="form-label">Status</label>
    <select class="form-select" name="status" required>
      <option value="Available" <%= space.status === 'Available' ? 'selected' : '' %>>Available</option>
      <option value="Booked" <%= space.status === 'Booked' ? 'selected' : '' %>>Booked</option>
      <option value="Maintenance" <%= space.status === 'Maintenance' ? 'selected' : '' %>>Maintenance</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Save Changes</button>
  <a href="/space/add" class="btn btn-secondary">Cancel</a>
</form>

<%- include('partials/footer') %>