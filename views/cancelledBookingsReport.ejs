<%- include('partials/header') %>

<div class="container mt-4">
  <div class="page-header d-flex justify-content-between align-items-center">
    <h1><i class="fas fa-history"></i> Cancelled & Vacated Bookings</h1>
    <button class="btn btn-outline-secondary" onclick="window.print();"><i class="fas fa-print"></i> Print Report</button>
  </div>
  <p class="text-muted">A report of all bookings that have been cancelled or vacated for the session: <strong><%= locals.viewingSession.name %></strong>.</p>

  <div class="card mt-4">
    <div class="card-body">
      <% if (bookings && bookings.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="thead-light">
              <tr>
                <th rowspan="2" class="align-middle">Exhibitor / Space</th>
                <th colspan="3" class="text-center">Rent (₹)</th>
                <th rowspan="2" class="align-middle text-center">Electric Paid (₹)</th>
                <th rowspan="2" class="align-middle text-center">Material Paid (₹)</th>
                <th rowspan="2" class="align-middle text-center">Shed Paid (₹)</th>
              </tr>
              <tr>
                <th class="text-center">Charged</th>
                <th class="text-center">Paid</th>
                <th class="text-center">Due</th>
              </tr>
            </thead>
            <tbody>
              <% bookings.forEach(booking => { %>
                <% const rentDue = booking.rent_charged - (booking.discount || 0) - booking.rent_paid; %>
                <tr>
                  <td>
                    <a href="/booking/details-full/<%= booking.id %>" class="fw-bold"><%= booking.exhibitor_name %></a>
                    <br>
                    <small class="text-muted"><%= booking.space_name %> | Cancelled on <%= new Date(booking.vacated_date).toLocaleDateString('en-IN', { day: 'numeric', month: 'short' }) %></small>
                  </td>
                  <td class="text-end"><%= booking.rent_charged.toLocaleString('en-IN') %></td>
                  <td class="text-end text-success"><%= booking.rent_paid.toLocaleString('en-IN') %></td>
                  <td class="text-end <%= rentDue > 0 ? 'text-danger' : '' %>">
                    <%= rentDue.toLocaleString('en-IN') %>
                  </td>
                  <td class="text-end">
                    <%= booking.electric_paid > 0 ? booking.electric_paid.toLocaleString('en-IN') : '-' %>
                  </td>
                  <td class="text-end">
                    <%= booking.material_paid > 0 ? booking.material_paid.toLocaleString('en-IN') : '-' %>
                  </td>
                  <td class="text-end">
                    <%= booking.shed_paid > 0 ? booking.shed_paid.toLocaleString('en-IN') : '-' %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="alert alert-info">
          <i class="fas fa-info-circle"></i> No cancelled or vacated bookings found for this session.
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('partials/footer') %>