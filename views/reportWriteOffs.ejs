<%- include('partials/header') %>

<div class="container mt-4">
    <%- include('partials/reportSubNav') %>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0"><%= title %></h1>
    </div>

    <!-- Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form action="/report/write-offs" method="GET" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="start_date" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="start_date" name="start_date" value="<%= filters.start_date %>">
                </div>
                <div class="col-md-4">
                    <label for="end_date" class="form-label">End Date</label>
                    <input type="date" class="form-control" id="end_date" name="end_date" value="<%= filters.end_date %>">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Filter</button>
                    <a href="/report/write-offs" class="btn btn-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Report Table -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Date</th>
                    <th>Exhibitor Name</th>
                    <th>Amount</th>
                    <th>Reason</th>
                    <th>Written Off By</th>
                </tr>
            </thead>
            <tbody>
                <% writeOffs.forEach(wo => { %>
                    <tr>
                        <td><%= new Date(wo.write_off_date).toLocaleDateString('en-GB') %></td>
                        <td><%= wo.exhibitor_name %></td>
                        <td><%= wo.amount.toFixed(2) %></td>
                        <td><%= wo.reason %></td>
                        <td><%= wo.user_name || 'N/A' %></td>
                    </tr>
                <% }) %>
                <% if (writeOffs.length === 0) { %>
                    <tr>
                        <td colspan="5" class="text-center">No write-offs found for the selected period.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('partials/footer') %>