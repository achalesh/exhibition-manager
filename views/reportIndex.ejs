<%- include('partials/header') %>

<div class="container-fluid">
    <h2 class="mb-4"><%= title %></h2>

    <!-- Financial Reports -->
    <h4 class="mt-4 mb-3 text-primary">Financial Reports</h4>
    <div class="row">
        <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-file-invoice-dollar me-2 text-success"></i>Dues Report</h5>
                    <p class="card-text text-muted">View outstanding balances for rent, electricity, materials, and sheds.</p>
                    <a href="/report/dues" class="btn btn-outline-primary mt-auto">View Report</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-receipt me-2 text-success"></i>Payment Collection</h5>
                    <p class="card-text text-muted">Detailed list of all payments received, filterable by date and category.</p>
                    <a href="/report/payments" class="btn btn-outline-primary mt-auto">View Report</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-chart-pie me-2 text-success"></i>Payment Summary</h5>
                    <p class="card-text text-muted">A summary of total payments collected per exhibitor across all categories.</p>
                    <a href="/report/payment-summary" class="btn btn-outline-primary mt-auto">View Report</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-bolt me-2 text-success"></i>Electrical Bills</h5>
                    <p class="card-text text-muted">List of all generated electrical bills with itemized details.</p>
                    <a href="/report/electric" class="btn btn-outline-primary mt-auto">View Report</a>
                </div>
            </div>
        </div>
         <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-hand-holding-usd me-2 text-success"></i>Rent Details</h5>
                    <p class="card-text text-muted">Complete rent details for all bookings, including balances.</p>
                    <a href="/report/rent" class="btn btn-outline-primary mt-auto">View Report</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Operational Reports -->
    <h4 class="mt-4 mb-3 text-primary">Operational Reports</h4>
    <div class="row">
        <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-th-large me-2 text-info"></i>Space List</h5>
                    <p class="card-text text-muted">A complete list of all exhibition spaces, their sizes, and status.</p>
                    <a href="/report/spaces" class="btn btn-outline-primary mt-auto">View Report</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-users me-2 text-info"></i>Exhibitor List</h5>
                    <p class="card-text text-muted">Contact and booking details for all registered exhibitors.</p>
                    <a href="/report/exhibitors" class="btn btn-outline-primary mt-auto">View Report</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-box-open me-2 text-info"></i>Material Issues</h5>
                    <p class="card-text text-muted">Track all materials issued to exhibitors, including quantities and costs.</p>
                    <a href="/report/materials" class="btn btn-outline-primary mt-auto">View Report</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-warehouse me-2 text-info"></i>Shed Allocations</h5>
                    <p class="card-text text-muted">View all allocated sheds, their rent, and the assigned exhibitor.</p>
                    <a href="/report/sheds" class="btn btn-outline-primary mt-auto">View Report</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Administrative Reports -->
    <% if (user && user.role === 'admin') { %>
        <h4 class="mt-4 mb-3 text-primary">Administrative Reports</h4>
        <div class="row">
            <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="fas fa-user-shield me-2 text-danger"></i>Audit Log</h5>
                        <p class="card-text text-muted">Track user management actions like creations, edits, and deletions.</p>
                        <a href="/report/audit-log" class="btn btn-outline-primary mt-auto">View Report</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>