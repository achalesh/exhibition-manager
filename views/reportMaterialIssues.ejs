<%- include('partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1><%= title %></h1>
    </div>

    <!-- Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form action="/report/material-issues" method="GET">
                <div class="row g-3 align-items-end">
                    <div class="col-md-5">
                        <label for="q" class="form-label">Search</label>
                        <input type="text" class="form-control" id="q" name="q" placeholder="Exhibitor, Facia, Space, or SL No..." value="<%= filters.q %>">
                    </div>
                    <div class="col-md-auto">
                        <button type="submit" class="btn btn-primary">Filter</button>
                        <a href="/report/material-issues" class="btn btn-secondary">Clear</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Report Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>SL No.</th>
                            <th>Date</th>
                            <th>Exhibitor</th>
                            <th>Space</th>
                            <th class="text-end">Total Payable (₹)</th>
                            <th class="text-end">Balance Due (₹)</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (issues.length > 0) { %>
                            <% issues.forEach(issue => { %>
                                <tr>
                                    <td><%= issue.sl_no || 'N/A' %></td>
                                    <td><%= new Date(issue.issue_date).toLocaleDateString() %></td>
                                    <td><%= issue.client_name %><br><small class="text-muted"><%= issue.facia_name %></small></td>
                                    <td><%= issue.space_name || 'N/A' %></td>
                                    <td class="text-end"><%= (issue.total_payable || 0).toFixed(2) %></td>
                                    <td class="text-end fw-bold <%= (issue.balance_due || 0) > 0 ? 'text-danger' : '' %>"><%= (issue.balance_due || 0).toFixed(2) %></td>
                                    <td class="text-end"><a href="/material/edit/<%= issue.id %>" class="btn btn-sm btn-outline-primary">View/Edit</a></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="text-center text-muted">No material issues found matching your criteria.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>