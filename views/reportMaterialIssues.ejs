<%- include('partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0"><%= title %></h1>
        <a href="/report" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Report Menu
        </a>
    </div>

    <!-- Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form action="/report/material-issues" method="GET" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="q" class="form-label">Search</label>
                    <input type="text" class="form-control" id="q" name="q" value="<%= filters.q %>" placeholder="Exhibitor, Facia, Space, SL No...">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Filter</button>
                    <a href="/report/material-issues" class="btn btn-secondary ms-2">Clear</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>SL No</th>
                            <th>Date</th>
                            <th>Exhibitor</th>
                            <th>Facia Name</th>
                            <th>Space</th>
                            <th class="text-end">Total Payable</th>
                            <th class="text-end">Advance Paid</th>
                            <th class="text-end">Balance Due</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (issues.length > 0) { %>
                            <% issues.forEach(issue => { %>
                                <tr>
                                    <td><a href="/material/edit/<%= issue.id %>"><%= issue.sl_no %></a></td>
                                    <td><%= new Date(issue.issue_date).toLocaleDateString('en-GB') %></td>
                                    <td><%= issue.client_name %></td>
                                    <td><%= issue.facia_name %></td>
                                    <td><%= issue.space_name %></td>
                                    <td class="text-end">₹<%= (issue.total_payable || 0).toFixed(2) %></td>
                                    <td class="text-end">₹<%= (issue.advance_paid || 0).toFixed(2) %></td>
                                    <td class="text-end">₹<%= (issue.balance_due || 0).toFixed(2) %></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center">No material issues found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>