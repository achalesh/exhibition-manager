<%- include('partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0"><%= title %></h1>
        <a href="/report" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Report Menu
        </a>
    </div>

    <!-- Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form action="/accounting" method="GET" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label for="start_date" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="start_date" name="start_date" value="<%= filters.start_date %>">
                </div>
                <div class="col-md-3">
                    <label for="end_date" class="form-label">End Date</label>
                    <input type="date" class="form-control" id="end_date" name="end_date" value="<%= filters.end_date %>">
                </div>
                <div class="col-md-2">
                    <label for="type" class="form-label">Type</label>
                    <select id="type" name="type" class="form-select">
                        <option value="all" <%= filters.type === 'all' ? 'selected' : '' %>>All</option>
                        <option value="income" <%= filters.type === 'income' ? 'selected' : '' %>>Income</option>
                        <option value="expenditure" <%= filters.type === 'expenditure' ? 'selected' : '' %>>Expenditure</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="q" class="form-label">Search</label>
                    <input type="text" class="form-control" id="q" name="q" value="<%= filters.q %>" placeholder="Category/Desc...">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">Filter</button>
                    <a href="/accounting" class="btn btn-secondary ms-2">Clear</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary -->
    <div class="row mb-3 text-center">
        <div class="col-md-4">
            <div class="card card-body bg-success-subtle">
                <h6 class="card-title">Total Income</h6>
                <p class="card-text fs-5 fw-bold">₹<%= summary.total_income.toFixed(2) %></p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-body bg-danger-subtle">
                <h6 class="card-title">Total Expenditure</h6>
                <p class="card-text fs-5 fw-bold">₹<%= summary.total_expenditure.toFixed(2) %></p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-body bg-info-subtle">
                <h6 class="card-title">Net Balance</h6>
                <p class="card-text fs-5 fw-bold">₹<%= summary.balance.toFixed(2) %></p>
            </div>
        </div>
    </div>

    <!-- Transactions Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <span>Transactions</span>
            <a href="/accounting/csv?<%- new URLSearchParams(filters) %>" class="btn btn-sm btn-outline-success">
                <i class="bi bi-download me-1"></i> Export CSV
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th class="text-end">Amount</th>
                            <th>User</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (transactions.length > 0) { %>
                            <% transactions.forEach(t => { %>
                                <tr>
                                    <td><%= new Date(t.transaction_date).toLocaleDateString('en-GB') %></td>
                                    <td>
                                        <% if (t.transaction_type === 'income') { %>
                                            <span class="badge bg-success">Income</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Expenditure</span>
                                        <% } %>
                                    </td>
                                    <td><%= t.category %></td>
                                    <td><%= t.description %></td>
                                    <td class="text-end">₹<%= t.amount.toFixed(2) %></td>
                                    <td><%= t.username || 'N/A' %></td>
                                    <td>
                                        <% if (!t.category.endsWith(' Payment')) { %>
                                            <a href="/accounting/edit/<%= t.id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="text-center">No transactions found for the selected period.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (pagination.totalPages > 1) { %>
                <nav>
                    <ul class="pagination justify-content-center">
                        <% pageNumbers.forEach(page => { %>
                            <% if (page === '...') { %>
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            <% } else { %>
                                <li class="page-item <%= page === pagination.currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="/accounting?page=<%= page %>&<%- new URLSearchParams(filters) %>"><%= page %></a>
                                </li>
                            <% } %>
                        <% }) %>
                    </ul>
                </nav>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>