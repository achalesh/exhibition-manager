<%- include('partials/header') %>

<div class="container-fluid">
  <div class="d-flex align-items-center justify-content-between mb-4 no-print">
    <h1 class="h3 mb-0"><%= title %></h1>
  </div>

  <!-- Financial Summary -->
  <div class="row no-print">
    <div class="col-xl-4 col-md-6 mb-4">
      <div class="card border-success shadow h-100 py-2">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col mr-2">
              <div class="text-xs fw-bold text-success text-uppercase mb-1">Total Income</div>
              <div class="h5 mb-0 fw-bold text-body">₹<%= summary.total_income.toLocaleString('en-IN', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></div>
            </div>
            <div class="col-auto">
              <i class="bi bi-arrow-up-circle-fill fs-2 text-secondary"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xl-4 col-md-6 mb-4">
      <div class="card border-danger shadow h-100 py-2">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col mr-2">
              <div class="text-xs fw-bold text-danger text-uppercase mb-1">Total Expenditure</div>
              <div class="h5 mb-0 fw-bold text-body">₹<%= summary.total_expenditure.toLocaleString('en-IN', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></div>
            </div>
            <div class="col-auto">
              <i class="bi bi-arrow-down-circle-fill fs-2 text-secondary"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xl-4 col-md-6 mb-4">
      <div class="card border-info shadow h-100 py-2">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col mr-2">
              <div class="text-xs fw-bold text-info text-uppercase mb-1">Net Balance</div>
              <div class="h5 mb-0 fw-bold text-body">₹<%= summary.balance.toLocaleString('en-IN', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></div>
            </div>
            <div class="col-auto">
              <i class="bi bi-calculator-fill fs-2 text-secondary"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Add Transaction Form -->
  <div class="card shadow-sm mb-4 no-print">
    <div class="card-header py-3">
      <h6 class="m-0 fw-bold text-primary">Add New Transaction</h6>
    </div>
    <div class="card-body">
      <form action="/accounting/add" method="POST">
        <div class="row g-3">
          <div class="col-md-3">
            <label for="transaction_type">Type</label>
            <select id="transaction_type" name="transaction_type" class="form-control" required>
              <option value="expenditure" selected>Expenditure</option>
              <option value="income">Income</option>
            </select>
          </div>
          <div class="col-md-3">
            <label for="transaction_date">Date</label>
            <input type="date" class="form-control" id="transaction_date" name="transaction_date" value="<%= new Date().toISOString().split('T')[0] %>" required>
          </div>
          <div class="col-md-3">
            <label for="amount">Amount (₹)</label>
            <input type="number" step="0.01" class="form-control" id="amount" name="amount" placeholder="e.g., 500.00" required>
          </div>
           <div class="col-md-3">
            <label for="category">Category</label>
            <input type="text" class="form-control" id="category" name="category" placeholder="e.g., Office Supplies" required>
          </div>
        </div>
        <div class="mt-3">
          <label for="description">Description (Optional)</label>
          <input type="text" class="form-control" id="description" name="description" placeholder="e.g., Printer paper and pens">
        </div>
        <button type="submit" class="btn btn-primary mt-3">Add Transaction</button>
      </form>
    </div>
  </div>

  <!-- Link to Category Report -->
  <div class="mb-4 no-print">
    <a href="/accounting/report/by-category" class="btn btn-info"><i class="bi bi-pie-chart-fill me-2"></i>View Summary by Category</a>
    <button onclick="window.print()" class="btn btn-secondary"><i class="bi bi-printer-fill me-2"></i>Print Report</button>
  </div>

  <!-- Filter Form -->
  <div class="card shadow-sm mb-4 no-print">
    <div class="card-header py-3">
      <h6 class="m-0 fw-bold text-primary">Filter Transactions</h6>
    </div>
    <div class="card-body">
      <form action="/accounting" method="GET" class="row g-3 align-items-end">
        <div class="col-md-3">
          <label for="start_date" class="form-label">Date From</label>
          <input type="date" class="form-control" id="start_date" name="start_date" value="<%= filters.start_date %>">
        </div>
        <div class="col-md-3">
          <label for="end_date" class="form-label">Date To</label>
          <input type="date" class="form-control" id="end_date" name="end_date" value="<%= filters.end_date %>">
        </div>
        <div class="col-md-2">
          <label for="filter_type" class="form-label">Type</label>
          <select id="filter_type" name="type" class="form-select">
            <option value="all" <%= filters.type === 'all' ? 'selected' : '' %>>All</option>
            <option value="income" <%= filters.type === 'income' ? 'selected' : '' %>>Income</option>
            <option value="expenditure" <%= filters.type === 'expenditure' ? 'selected' : '' %>>Expenditure</option>
          </select>
        </div>
        <div class="col-md-2">
          <label for="q" class="form-label">Search</label>
          <input type="text" class="form-control" id="q" name="q" placeholder="Category or description..." value="<%= filters.q %>">
        </div>
        <div class="col-md-2 d-flex">
          <button type="submit" class="btn btn-primary w-100">Filter</button>
          <a href="/accounting/csv?start_date=<%= filters.start_date %>&end_date=<%= filters.end_date %>&type=<%= filters.type %>&q=<%= filters.q %>" class="btn btn-success w-100 ms-2" title="Export to CSV"><i class="bi bi-download"></i></a>
        </div>
      </form>
    </div>
  </div>

  <!-- Transactions Table -->
  <div class="card shadow-sm mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 fw-bold text-primary">Transaction History</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable">
          <thead>
            <tr>
              <th>Date</th>
              <th>Type</th>
              <th>Category</th>
              <th>Description</th>
              <th class="text-end">Amount (₹)</th>
              <th>Added By</th>
              <th class="no-print">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% transactions.forEach(t => { %>
              <tr>
                <td><%= new Date(t.transaction_date).toLocaleDateString() %></td>
                <td><span class="badge bg-<%= t.transaction_type === 'income' ? 'success' : 'danger' %>"><%= t.transaction_type %></span></td>
                <td><%= t.category %></td>
                <td><%= t.description %></td>
                <td class="text-end"><%= t.amount.toLocaleString('en-IN', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
                <td><%= t.username || 'N/A' %></td>
                <td class="no-print">
                  <% if (t.category.endsWith(' Payment')) { %>
                    <span class="text-muted" title="This is an automated transaction from a payment and cannot be edited or deleted.">
                      <i class="bi bi-lock-fill"></i> Read-only
                    </span>
                  <% } else { %>
                    <a href="/accounting/edit/<%= t.id %>" class="btn btn-sm btn-warning me-1" title="Edit"><i class="bi bi-pencil"></i></a>
                    <form action="/accounting/delete/<%= t.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this transaction?');">
                      <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                        <i class="bi bi-trash"></i>
                      </button>
                    </form>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
          <tfoot class="print-only">
            <tr>
              <td colspan="4" class="text-end fw-bold pt-3">Total Income</td>
              <td class="text-end fw-bold pt-3 text-success">
                <%= summary.total_income.toLocaleString('en-IN', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
              </td>
              <td class="pt-3"></td>
            </tr>
            <tr>
              <td colspan="4" class="text-end fw-bold">Total Expenditure</td>
              <td class="text-end fw-bold text-danger"><%= summary.total_expenditure.toLocaleString('en-IN', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
              <td></td>
            </tr>
            <tr class="border-top">
              <td colspan="4" class="text-end fw-bold">Net Balance</td>
              <td class="text-end fw-bold"><%= summary.balance.toLocaleString('en-IN', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
              <td></td>
            </tr>
          </tfoot>
        </table>
      </div>

      <!-- Pagination Controls -->
      <% if (pagination.totalPages > 1) { %>
        <nav class="d-flex justify-content-between align-items-center no-print">
          <div>
            <small class="text-muted">
              Showing <%= transactions.length %> of <%= pagination.totalTransactions %> transactions
            </small>
          </div>
          <ul class="pagination mb-0">
            <li class="page-item <%= !pagination.hasPrevPage ? 'disabled' : '' %>">
              <a class="page-link" href="?page=<%= pagination.currentPage - 1 %>&start_date=<%= filters.start_date %>&end_date=<%= filters.end_date %>&type=<%= filters.type %>&q=<%= filters.q %>">
                Previous
              </a>
            </li>
            <% pageNumbers.forEach(page => { %>
              <% if (page === '...') { %>
                <li class="page-item disabled"><span class="page-link">...</span></li>
              <% } else { %>
                <li class="page-item <%= page === pagination.currentPage ? 'active' : '' %>">
                  <a class="page-link" href="?page=<%= page %>&start_date=<%= filters.start_date %>&end_date=<%= filters.end_date %>&type=<%= filters.type %>&q=<%= filters.q %>">
                    <%= page %>
                  </a>
                </li>
              <% } %>
            <% }) %>
            <li class="page-item <%= !pagination.hasNextPage ? 'disabled' : '' %>">
              <a class="page-link" href="?page=<%= pagination.currentPage + 1 %>&start_date=<%= filters.start_date %>&end_date=<%= filters.end_date %>&type=<%= filters.type %>&q=<%= filters.q %>">
                Next
              </a>
            </li>
          </ul>
        </nav>
      <% } %>

    </div>
  </div>
</div>

<%- include('partials/footer') %>