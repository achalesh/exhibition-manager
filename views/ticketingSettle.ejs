<%- include('partials/header') %>

<div class="container-fluid">
  <%- include('partials/ticketingNav') %>

  <div class="card shadow-sm">
    <div class="card-header py-3">
      <h6 class="m-0 fw-bold text-primary">Unsettled Ticket Distributions</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable">
          <thead>
            <tr>
              <th>Staff</th>
              <th>Ticket Type</th>
              <th>Distributed Range</th>
              <th>Return Start No.</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% distributions.forEach(d => { %>
              <tr>
                <td><%= d.staff_name %></td>
                <td><%= d.rate_name %> (â‚¹<%= d.rate %>)</td>
                <td><%= d.distributed_start_number %> - <%= d.distributed_end_number %></td>
                <td>
                  <form action="/ticketing/settle/confirm/<%= d.id %>" method="GET">
                    <div class="input-group">
                      <input 
                        type="number" 
                        name="returned_start_number" 
                        class="form-control" 
                        placeholder="First unsold ticket"
                        min="<%= d.distributed_start_number %>"
                        max="<%= d.distributed_end_number + 1 %>"
                        required
                      >
                      <button type="submit" class="btn btn-success">Review & Settle</button>
                    </div>
                  </form>
                </td>
                <td>
                  <form action="/ticketing/settle/cancel/<%= d.id %>" method="POST" onsubmit="return confirm('Are you sure you want to cancel this distribution? This is for cases where tickets were returned unused.')">
                    <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                  </form>
                </td>
              </tr>
            <% }) %>
            <% if (distributions.length === 0) { %>
              <tr>
                <td colspan="5" class="text-center text-muted">No unsettled distributions found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>