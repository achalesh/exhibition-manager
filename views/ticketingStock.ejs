<%- include('partials/header') %>

<div class="container-fluid">
  <%- include('partials/ticketingNav') %>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0 text-gray-800"><%= title %></h1>
    <div>
      <a href="/ticketing/stock/bulk-upload" class="btn btn-sm btn-info shadow-sm">
        <i class="bi bi-upload me-1"></i> Bulk Upload from CSV
      </a>
      <button class="btn btn-sm btn-danger shadow-sm" data-bs-toggle="modal" data-bs-target="#clearHistoryModal">
        <i class="bi bi-trash me-1"></i> Clear All History
      </button>
    </div>
  </div>

  <div class="card shadow-sm mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 fw-bold text-primary">Add New Stock Bundle</h6>
    </div>
    <div class="card-body">
      <form action="/ticketing/stock/add" method="POST">
        <div class="row g-3 align-items-end">
        <div class="col-md-3">
            <label for="rate" class="form-label">Rate (₹)</label>
            <input type="number" class="form-control" id="rate" name="rate" step="0.01" placeholder="e.g., 50.00" required autofocus>
        </div>
        <div class="col-md-3">
            <label for="color" class="form-label">Color</label>
            <input type="text" class="form-control" id="color" name="color" placeholder="e.g., Red" required>
        </div>
        <div class="col-md-2">
            <label for="start_number" class="form-label">Start Serial No.</label>
            <input type="number" class="form-control" id="start_number" name="start_number" required>
        </div>
        <div class="col-md-2">
            <label for="end_number" class="form-label">End Serial No.</label>
            <input type="number" class="form-control" id="end_number" name="end_number" required>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Add Stock</button>
        </div>
        </div>
      </form>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-header py-3">
      <h6 class="m-0 fw-bold text-primary">Available Stock</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Rate (₹)</th>
              <th>Color</th>
              <th>Serial Range</th>
              <th>Total Tickets</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% stock.forEach(item => { %>
              <tr>
                <td><%= item.rate.toFixed(2) %></td>
                <td><span class="badge" style="background-color: <%= item.color ? item.color.toLowerCase() : 'grey' %>;"><%= item.color %></span></td>
                <td><%= item.start_number %> - <%= item.end_number %></td>
                <td><%= item.end_number - item.start_number + 1 %></td>
                <td>
                  <% if (item.status === 'Available') { %>
                    <span class="badge bg-success">Available</span>
                  <% } else if (item.status === 'Distributed') { %>
                    <span class="badge bg-warning text-dark">Distributed</span>
                  <% } else { %>
                    <span class="badge bg-secondary"><%= item.status %></span>
                  <% } %>
                </td>
                <td>
                  <% if (item.status === 'Available') { %>
                    <a href="/ticketing/stock/edit/<%= item.id %>" class="btn btn-sm btn-outline-primary me-1" title="Edit"><i class="bi bi-pencil"></i></a>
                    <form action="/ticketing/stock/delete/<%= item.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this stock bundle?');">
                      <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete"><i class="bi bi-trash"></i></button>
                    </form>
                  <% } else { %>
                    <span class="text-muted fst-italic">N/A</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- Clear History Modal -->
<div class="modal fade" id="clearHistoryModal" tabindex="-1" aria-labelledby="clearHistoryModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="clearHistoryModalLabel">Confirm Action</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p class="text-danger fw-bold">This is a destructive action and cannot be undone.</p>
        <p>This will delete all ticket stock, all ticket distributions, and all related accounting entries for ticket sales.</p>
        <p>Are you absolutely sure you want to proceed?</p>
      </div>
      <div class="modal-footer">
        <form action="/ticketing/stock/clear-all" method="POST">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-danger">Yes, Clear All History</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>