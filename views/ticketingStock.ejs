<%- include('partials/header') %>

<div class="container-fluid mt-4">
    <%- include('partials/ticketingSubNav') %>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3"><%= title %></h1>
        <div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addStockModal">
                <i class="fas fa-plus"></i> Add Stock
            </button>
            <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                <i class="fas fa-tags"></i> Add Category
            </button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Total Available Tickets</div>
                <div class="card-body">
                    <h3 class="card-title text-center"><%= totalAvailableTickets.toLocaleString() %></h3>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Available Stock Summary</div>
                <div class="card-body">
                    <% if (categorySummary.length > 0) { %>
                        <ul class="list-group list-group-flush">
                            <% categorySummary.forEach(summary => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><%= summary.category_name %></span>
                                    <div>
                                        <span class="badge bg-success rounded-pill me-1" title="Available"><i class="fas fa-check-circle"></i> <%= summary.available_tickets.toLocaleString() %></span>
                                        <span class="badge bg-warning text-dark rounded-pill me-1" title="Distributed"><i class="fas fa-truck"></i> <%= summary.distributed_tickets.toLocaleString() %></span>
                                        <span class="badge bg-secondary rounded-pill" title="Settled"><i class="fas fa-handshake"></i> <%= summary.settled_tickets.toLocaleString() %></span>
                                    </div>
                                </li>
                            <% }); %>
                        </ul>
                    <% } else { %>
                        <p class="text-muted">No available stock to summarize.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Stock Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Ticket Bundles</span>
            <form id="bulkDeleteForm" action="/ticketing/stock/bulk-delete" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete the selected items? This cannot be undone.');">
                    <i class="fas fa-trash-alt"></i> Delete Selected
                </button>
            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th><input type="checkbox" id="selectAllCheckbox"></th>
                            <th>Category</th>
                            <th>Rate</th>
                            <th>Color</th>
                            <th>Start #</th>
                            <th>End #</th>
                            <th>Total</th>
                            <th>Entry Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% stock.forEach(item => { %>
                            <tr class="<%= item.status !== 'Available' ? 'table-secondary' : '' %>">
                                <td>
                                    <% if (item.status === 'Available') { %>
                                        <input type="checkbox" name="ids" value="<%= item.id %>" form="bulkDeleteForm">
                                    <% } %>
                                </td>
                                <td><%= item.category_name %></td>
                                <td><%= item.rate.toFixed(2) %></td>
                                <td><span class="badge" style="background-color: #966919; color: #fff;"><%= item.color || 'N/A' %></span></td>
                                <td><%= item.start_number %></td>
                                <td><%= item.end_number %></td>
                                <td><%= item.end_number - item.start_number + 1 %></td>
                                <td><%= new Date(item.entry_date).toLocaleDateString('en-GB') %></td>
                                <td>
                                    <span class="badge <%= item.status === 'Available' ? 'bg-success' : (item.status === 'Distributed' ? 'bg-warning text-dark' : 'bg-secondary') %>">
                                        <%= item.status %>
                                    </span>
                                </td>
                                <td>
                                    <% if (item.status === 'Available') { %>
                                        <a href="/ticketing/stock/edit/<%= item.id %>" class="btn btn-outline-primary"><i class="fas fa-edit"></i> Edit</a>
                                        <form action="/ticketing/stock/delete/<%= item.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                            <button type="submit" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i> Delete</button>
                                        </form>
                                    <% } else { %>
                                        <span class="text-muted">N/A</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                        <% if (stock.length === 0) { %>
                            <tr>
                                <td colspan="10" class="text-center">No stock items found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add Stock Modal and Add Category Modal would go here -->
<%- include('partials/ticketingModals') %>

<script>
    document.getElementById('selectAllCheckbox').addEventListener('change', function(e) {
        const checkboxes = document.querySelectorAll('input[name="ids"]');
        checkboxes.forEach(checkbox => {
            checkbox.checked = e.target.checked;
        });
    });

</script>

<%- include('partials/footer') %>