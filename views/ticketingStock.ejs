<%- include('partials/header') %>

<div class="container mt-4">
    <%- include('partials/ticketingNav') %>

    <div class="d-flex justify-content-between align-items-center mb-3 no-print">
        <h1><%= title %></h1>
    </div>

    <div class="row">
        <!-- Add New Stock Form -->
        <div class="col-md-4 no-print">
            <div class="card">
                <div class="card-header">
                    <h5>Add New Stock</h5>
                </div>
                <div class="card-body">
                    <form action="/ticketing/stock/add" method="POST">
                        <div class="mb-3">
                            <label for="category_id" class="form-label">Category</label>
                            <select class="form-select" id="category_id" name="category_id" required autofocus>
                                <option value="">-- Select Category --</option>
                                <% categories.forEach(cat => { %>
                                    <option value="<%= cat.id %>"><%= cat.name %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="entry_date" class="form-label">Entry Date</label>
                            <input type="date" class="form-control" id="entry_date" name="entry_date" value="<%= new Date().toISOString().split('T')[0] %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="rate" class="form-label">Rate (₹)</label>
                            <input type="number" step="0.01" class="form-control" id="rate" name="rate" required>
                        </div>
                        <div class="mb-3">
                            <label for="color" class="form-label">Color</label>
                            <input type="text" class="form-control" id="color" name="color">
                        </div>
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label for="start_number" class="form-label">Start No.</label>
                                <input type="number" class="form-control" id="start_number" name="start_number" required>
                            </div>
                            <div class="col-6 mb-3">
                                <label for="end_number" class="form-label">End No.</label>
                                <input type="number" class="form-control" id="end_number" name="end_number" required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Add Stock</button>
                    </form>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h6>Add New Category</h6>
                </div>
                <div class="card-body">
                    <form action="/ticketing/categories/add" method="POST">
                        <div class="input-group">
                            <input type="text" name="name" class="form-control" placeholder="e.g., VIP, Staff" required>
                            <button class="btn btn-outline-secondary" type="submit">Add</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>

        <!-- Existing Stock Table -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Current Stock</h5>
                        <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse" aria-expanded="false" aria-controls="filterCollapse">
                            <i class="bi bi-funnel"></i> Filter / Search
                        </button>
                    </div>
                </div>
                <div class="collapse" id="filterCollapse">
                    <div class="card-body bg-light">
                        <form action="/ticketing/stock" method="GET" class="row g-3 align-items-end">
                            <div class="col-md-4">
                                <label for="filter-category" class="form-label">Category</label>
                                <select id="filter-category" name="category" class="form-select">
                                    <option value="all">All Categories</option>
                                    <% categories.forEach(cat => { %>
                                        <option value="<%= cat.id %>" <%= filters.category == cat.id ? 'selected' : '' %>><%= cat.name %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="filter-status" class="form-label">Status</label>
                                <select id="filter-status" name="status" class="form-select">
                                    <option value="all" <%= filters.status === 'all' ? 'selected' : '' %>>All</option>
                                    <option value="Available" <%= filters.status === 'Available' ? 'selected' : '' %>>Available</option>
                                    <option value="Distributed" <%= filters.status === 'Distributed' ? 'selected' : '' %>>Distributed</option>
                                    <option value="Settled" <%= filters.status === 'Settled' ? 'selected' : '' %>>Settled</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="filter-q" class="form-label">Search by Ticket No.</label>
                                <input type="number" class="form-control" id="filter-q" name="q" value="<%= filters.q %>">
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary">Filter</button>
                                <a href="/ticketing/stock" class="btn btn-secondary ms-1">Clear</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card-header">
                    <h5>Current Stock</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Entry Date</th>
                                    <th>Category</th>
                                    <th class="text-end">Rate (₹)</th>
                                    <th>Color</th>
                                    <th>Number Range</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (stock.length > 0) { %>
                                    <% stock.forEach(item => { %>
                                        <tr>
                                            <td><%= new Date(item.entry_date).toLocaleDateString() %></td>
                                            <td><%= item.category_name || 'N/A' %></td>
                                            <td class="text-end"><%= item.rate.toFixed(2) %></td>
                                            <td><%= item.color || 'N/A' %></td>
                                            <td><%= item.start_number %> - <%= item.end_number %></td>
                                            <td class="text-end fw-bold"><%= item.end_number - item.start_number + 1 %></td>
                                            <td><span class="badge bg-<%= item.status === 'Available' ? 'success' : 'secondary' %>"><%= item.status %></span></td>
                                            <td class="text-end no-print">
                                                <a href="/ticketing/stock/edit/<%= item.id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                                                <form action="/ticketing/stock/delete/<%= item.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this stock item?');">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" <%= item.status !== 'Available' ? 'disabled' : '' %>>Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="text-center text-muted">No stock added for this session yet.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>