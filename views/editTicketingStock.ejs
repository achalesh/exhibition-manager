<%- include('partials/header') %>

<div class="container-fluid">
  <h1 class="h3 mb-4"><%= title %></h1>

  <div class="card shadow-sm mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 fw-bold text-primary">Edit Ticket Stock #<%= stock.id %></h6>
    </div>
    <div class="card-body">
      <form action="/ticketing/stock/edit/<%= stock.id %>" method="POST" class="row g-3 align-items-end mb-4">
        <div class="col-md-3">
          <label for="rate" class="form-label">Ticket Rate</label>
          <select id="base_rate_id" name="base_rate_id" class="form-select" required>
            <option value="1" <%= stock.rate == 100 ? 'selected' : '' %>>100</option>
            <option value="2" <%= stock.rate == 50 ? 'selected' : '' %>>50</option>
          </select>
        </div>
        <div class="col-md-3">
          <label for="color" class="form-label">Ticket Color</label>
          <select id="color" name="color" class="form-select" required>
            <option value="Red" <%= stock.color === 'Red' ? 'selected' : '' %>>Red</option>
            <option value="Green" <%= stock.color === 'Green' ? 'selected' : '' %>>Green</option>
            <option value="Blue" <%= stock.color === 'Blue' ? 'selected' : '' %>>Blue</option>
            <option value="Yellow" <%= stock.color === 'Yellow' ? 'selected' : '' %>>Yellow</option>
            <option value="Pink" <%= stock.color === 'Pink' ? 'selected' : '' %>>Pink</option>
          </select>
        </div>
        <div class="col-md-2">
          <label for="start_number" class="form-label">Starting Serial Number</label>
          <input type="number" class="form-control" id="start_number" name="start_number" value="<%= stock.start_number %>" required>
        </div>
        <div class="col-md-2">
          <label for="end_number" class="form-label">Ending Serial Number</label>
          <input type="number" class="form-control" id="end_number" name="end_number" value="<%= stock.end_number %>" required>
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-primary w-100">Update Stock</button>
        </div>
      </form>
    </div>
  </div>

  <a href="/ticketing/stock" class="btn btn-secondary">Â« Back to Manage Stock</a>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    document.getElementById('base_rate_id').focus();
  });
</script>

<%- include('partials/footer') %>