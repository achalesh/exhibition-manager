<%- include('partials/header') %>

<div class="container mt-4">
  <div class="card mx-auto" style="max-width: 700px;">
    <div class="card-header">
      <h2><%= title %></h2>
    </div>
    <div class="card-body">
      <form action="/settings/address" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="address" class="form-label">Exhibition Address</label>
          <input type="text" class="form-control" id="address" name="address" value="<%= details.address || '' %>" required>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input type="text" class="form-control" id="location" name="location" value="<%= details.location || '' %>" required>
        </div>
        <div class="mb-3">
          <label for="place" class="form-label">Place / Ground Name</label>
          <input type="text" class="form-control" id="place" name="place" value="<%= details.place || '' %>">
        </div>

        <hr>

        <div class="mb-3">
          <label for="logo" class="form-label">Exhibition Logo</label>
          <input type="file" class="form-control" id="logo" name="logo" accept="image/png, image/jpeg">
          <small class="form-text text-muted">Upload a new logo to replace the current one. PNG or JPG format recommended.</small>
        </div>

        <% if (details.logo_path) { %>
          <div class="mb-3">
            <p>Current Logo:</p>
            <img src="<%= details.logo_path %>" alt="Current Logo" class="img-thumbnail" style="max-height: 100px;">
          </div>
        <% } %>

        <input type="hidden" name="existing_logo_path" value="<%= details.logo_path || '' %>">

        <div class="mt-4">
          <button type="submit" class="btn btn-primary">Save Details</button>
          <a href="/" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>