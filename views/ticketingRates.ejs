<%- include('partials/header') %>

<div class="container-fluid">
  <h1 class="h3 mb-4"><%= title %></h1>

  <div class="card shadow-sm mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 fw-bold text-primary">Add New Ticket Type</h6>
    </div>
    <div class="card-body">
      <form action="/ticketing/rates/add" method="POST" class="row g-3 align-items-end mb-4">
        <div class="col">
          <label for="rate_name" class="form-label">Name (e.g., Entry Ticket, Ferris Wheel)</label>
          <input type="text" class="form-control" id="rate_name" name="name" required>
        </div>
        <div class="col">
          <label for="rate_amount" class="form-label">Rate (₹)</label>
          <input type="number" step="0.01" class="form-control" id="rate_amount" name="rate" required>
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-success">Add Rate</button>
        </div>
      </form>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-header py-3"><h6 class="m-0 fw-bold text-primary">Existing Rates</h6></div>
    <div class="card-body">
      <ul class="list-group">
        <% rates.forEach(rate => { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= rate.name %> - <span class="fw-bold">₹<%= rate.rate.toFixed(2) %></span>
            <form action="/ticketing/rates/delete/<%= rate.id %>" method="POST" onsubmit="return confirm('Are you sure? This cannot be undone.')">
              <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
            </form>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
</div>

<%- include('partials/footer') %>