<%- include('partials/header') %>

<div class="container mt-4">
    <div class="card mx-auto" style="max-width: 600px;">
        <div class="card-header">
            <h3><%= title %></h3>
        </div>
        <div class="card-body">
            <form action="/materials/add" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Material Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="e.g., Plastic Chair, Wooden Table" required>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description (Optional)</label>
                    <textarea class="form-control" id="description" name="description" rows="3" placeholder="e.g., Color, size, condition"></textarea>
                </div>

                <div class="mb-3">
                    <label for="quantity" class="form-label">Quantity to Add</label>
                    <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1" required>
                    <div class="form-text">A unique QR code will be generated for each item.</div>
                </div>

                <button type="submit" class="btn btn-primary">Add to Stock</button>
                <a href="/materials" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>