<%- include('partials/header') %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2><%= title %></h2>
        </div>
        <div class="card-body">
          <form action="/shed/allocate" method="POST">
            <!-- Exhibitor Selection -->
            <div class="mb-3">
              <label for="booking_id" class="form-label">Select Exhibitor (Booking)</label>
              <select class="form-select" id="booking_id" name="booking_id" required>
                <option value="" selected disabled>-- Choose an Exhibitor --</option>
                <% bookings.forEach(b => { %>
                  <option value="<%= b.id %>"><%= b.exhibitor_name %> (<%= b.space_name %>)</option>
                <% }) %>
              </select>
            </div>

            <!-- Shed Selection -->
            <div class="mb-3">
              <label for="shed_id" class="form-label">Select Available Shed</label>
              <select class="form-select" id="shed_id" name="shed_id" required>
                <option value="" selected disabled>-- Choose a Shed --</option>
                <% sheds.forEach(s => { %>
                  <option value="<%= s.id %>"><%= s.name %> (<%= s.size %>) - â‚¹<%= s.rent %></option>
                <% }) %>
              </select>
            </div>

            <button type="submit" class="btn btn-primary">Allocate Shed</button>
            <a href="/" class="btn btn-secondary">Cancel</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.querySelector('form').addEventListener('submit', function() {
    // On form submission, find the selected shed option and remove it
    const shedSelect = document.getElementById('shed_id');
    const selectedOption = shedSelect.options[shedSelect.selectedIndex];
    if (selectedOption && selectedOption.value) {
      selectedOption.remove();
    }
  });
</script>

<%- include('partials/footer') %>