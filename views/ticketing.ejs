<%- include('partials/header') %>

<div class="container-fluid">
  <%- include('partials/ticketingNav') %>

  <div class="card shadow-sm mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 fw-bold text-primary">Recent Sales History</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable">
          <thead>
            <tr>
              <th>Date</th>
              <th>Ride Name</th>
              <th class="text-end">Total Revenue</th>
              <th>Recorded By</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% sales.forEach(sale => { %>
              <tr>
                <td><%= new Date(sale.settlement_date).toLocaleDateString() %></td>
                <td><%= sale.rate_name %></td>
                <td class="text-end">â‚¹<%= sale.calculated_revenue.toLocaleString('en-IN', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
                <td><%= sale.settled_by %></td>
                <td>
                  <% if (sale.stock_id) { %>
                    <form action="/ticketing/unsettle/<%= sale.id %>" method="POST" onsubmit="return confirm('Are you sure you want to unsettle this sale? This will remove the income from accounting and mark the distribution as unsettled.');">
                      <button type="submit" class="btn btn-sm btn-outline-danger">Unsettle</button>
                    </form>
                  <% } else { %>
                    <a href="/ticketing/import/edit/<%= sale.id %>" class="btn btn-sm btn-warning me-1" title="Edit Imported Sale"><i class="bi bi-pencil"></i></a>
                    <form action="/ticketing/import/delete/<%= sale.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this imported sale? This will also remove it from accounting.');">
                      <button type="submit" class="btn btn-sm btn-danger" title="Delete Imported Sale"><i class="bi bi-trash"></i></button>
                    </form>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>