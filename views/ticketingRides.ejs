<%- include('partials/header') %>

<div class="container-fluid mt-4">
    <%- include('partials/ticketingSubNav') %>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3"><%= title %></h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addRideModal">
            <i class="fas fa-plus"></i> Add Ride
        </button>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Ride Name</th>
                            <th>Rate</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% rides.forEach(ride => { %>
                            <tr>
                                <td><%= ride.name %></td>
                                <td><%= ride.rate.toFixed(2) %></td>
                                <td><span class="badge <%= ride.is_active ? 'bg-success' : 'bg-secondary' %>"><%= ride.is_active ? 'Active' : 'Inactive' %></span></td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editRideModal-<%= ride.id %>"><i class="fas fa-edit"></i> Edit</button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add Ride Modal -->
<div class="modal fade" id="addRideModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/ticketing/rides/add" method="POST">
                <div class="modal-header"><h5 class="modal-title">Add New Ride</h5></div>
                <div class="modal-body">
                    <input type="text" name="name" class="form-control mb-2" placeholder="Ride Name" required>
                    <input type="number" name="rate" class="form-control" placeholder="Rate" step="0.01" required>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add Ride</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Ride Modals -->
<% rides.forEach(ride => { %>
<div class="modal fade" id="editRideModal-<%= ride.id %>" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/ticketing/rides/update/<%= ride.id %>" method="POST">
                <div class="modal-header"><h5 class="modal-title">Edit Ride</h5></div>
                <div class="modal-body">
                    <input type="text" name="name" class="form-control mb-2" value="<%= ride.name %>" required>
                    <input type="number" name="rate" class="form-control mb-2" value="<%= ride.rate.toFixed(2) %>" step="0.01" required>
                    <div class="form-check form-switch"><input class="form-check-input" type="checkbox" name="is_active" id="is_active_<%= ride.id %>" <%= ride.is_active ? 'checked' : '' %>><label class="form-check-label" for="is_active_<%= ride.id %>">Active</label></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% }); %>

<%- include('partials/footer') %>