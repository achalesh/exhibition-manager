<%- include('partials/header') %>

<div class="container mt-4">
    <%- include('partials/ticketingNav') %>

    <div class="d-flex justify-content-between align-items-center mb-3 no-print">
        <h1><%= title %></h1>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Existing Rides</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Ride Name</th>
                                    <th class="text-end">Rate (₹)</th>
                                    <th>Status</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% rides.forEach(ride => { %>
                                    <tr>
                                        <form action="/ticketing/rides/update/<%= ride.id %>" method="POST">
                                            <td><input type="text" name="name" class="form-control" value="<%= ride.name %>" required></td>
                                            <td class="text-end"><input type="number" name="rate" step="0.01" class="form-control text-end" value="<%= ride.rate || '0.00' %>" required></td>
                                            <td>
                                                <select name="is_active" class="form-select">
                                                    <option value="1" <%= ride.is_active ? 'selected' : '' %>>Active</option>
                                                    <option value="0" <%= !ride.is_active ? 'selected' : '' %>>Inactive</option>
                                                </select>
                                            </td>
                                            <td class="text-end">
                                                <button type="submit" class="btn btn-sm btn-primary">Update</button>
                                                <!-- Delete button can be added here with a separate form -->
                                            </td>
                                        </form>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Add New Ride</h5>
                </div>
                <div class="card-body">
                    <form action="/ticketing/rides/add" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Ride Name (e.g., "Giant Wheel", "Tora Tora")</label>
                            <input type="text" class="form-control" id="name" name="name" required autofocus>
                        </div>
                        <div class="mb-3">
                            <label for="rate" class="form-label">Rate (₹)</label>
                            <input type="number" step="0.01" class="form-control" id="rate" name="rate" required>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Add Ride</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>