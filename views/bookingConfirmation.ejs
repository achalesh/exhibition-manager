<%- include('partials/header') %>

<!-- This meta tag will redirect the user to the booking page after 5 seconds -->
<meta http-equiv="refresh" content="5;url=/booking/add">

<div class="container mt-5">
  <div class="card text-center border-success">
    <div class="card-header bg-success text-white">
      <h2>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-check-circle-fill me-2" viewBox="0 0 16 16">
          <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
        </svg>
        <%= title %>
      </h2>
    </div>
    <div class="card-body">
      <p class="lead">The space has been successfully booked. Here are the details:</p>
      
      <ul class="list-group list-group-flush mb-4">
        <li class="list-group-item"><strong>Booking ID:</strong> #<%= booking.id %></li>
        <li class="list-group-item"><strong>Exhibitor:</strong> <%= booking.exhibitor_name %></li>
        <li class="list-group-item"><strong>Space:</strong> <%= booking.space_name %> (<%= booking.space_type %>)</li>
        <li class="list-group-item"><strong>Total Rent:</strong> ₹<%= booking.rent_amount.toFixed(2) %></li>
        <li class="list-group-item"><strong>Amount Due:</strong> ₹<%= booking.due_amount.toFixed(2) %></li>
      </ul>

      <p class="text-muted">
        You will be redirected back to the booking page in 5 seconds.
      </p>
      <a href="/booking/add" class="btn btn-primary">Book Another Space</a>
      <a href="/booking/invoice/<%= booking.id %>" class="btn btn-outline-secondary">View Full Invoice</a>
    </div>
    <div class="card-footer text-muted">
      Thank you!
    </div>
  </div>
</div>

<%- include('partials/footer') %>