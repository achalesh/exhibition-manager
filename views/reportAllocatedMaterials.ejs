<%- include('partials/header') %>

<div class="container-fluid">
  <h2 class="mb-4"><%= title %></h2>

  <!-- Search Form -->
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <form action="/report/allocated-materials" method="GET" class="row g-3 align-items-center">
        <div class="col-md-4">
          <input type="text" name="q" class="form-control" placeholder="Search by Exhibitor, Facia, Space, SL No..." value="<%= filters.q %>">
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Search</button>
          <% if (filters.q) { %>
            <a href="/report/allocated-materials" class="btn btn-outline-secondary ms-2">Clear</a>
          <% } %>
        </div>
        <div class="col-auto">
          <a href="/report/allocated-materials/csv?q=<%= filters.q %>" class="btn btn-success"><i class="bi bi-download me-1"></i> Download CSV</a>
        </div>
      </form>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-light">
            <tr>
              <th>SL No.</th>
              <th>Date</th>
              <th>Exhibitor</th>
              <th>Space</th>
              <th class="text-center">Plywood</th>
              <th class="text-center">Table</th>
              <th class="text-center">Chair</th>
              <th class="text-center">Rod</th>
              <th>Table/Chair Nos.</th>
              <th>Notes</th>
            </tr>
          </thead>
          <tbody>
            <% if (issues && issues.length > 0) { %>
              <% issues.forEach(issue => { %>
                <tr>
                  <td><%= issue.sl_no || issue.id %></td>
                  <td><%= new Date(issue.issue_date).toLocaleDateString() %></td>
                  <td>
                    <% if (issue.booking_id) { %>
                      <a href="/booking/details-full/<%= issue.booking_id %>"><strong><%= issue.client_name %></strong></a><br>
                    <% } else { %>
                      <strong><%= issue.client_name %></strong><br>
                    <% } %>
                    <small class="text-muted"><%= issue.facia_name || 'N/A' %></small>
                  </td>
                  <td><%= issue.space_name %></td>
                  <td class="text-center">
                    <%= (issue.plywood_free || 0) + (issue.plywood_paid || 0) %>
                  </td>
                  <td class="text-center">
                    <%= (issue.table_free || 0) + (issue.table_paid || 0) %>
                  </td>
                  <td class="text-center">
                    <%= (issue.chair_free || 0) + (issue.chair_paid || 0) %>
                  </td>
                  <td class="text-center">
                    <%= (issue.rod_free || 0) %>
                  </td>
                  <td>
                    <% if (issue.table_numbers || issue.chair_numbers) { %>
                      <small>
                        <% if (issue.table_numbers) { %><strong>T:</strong> <%= issue.table_numbers %><br><% } %>
                        <% if (issue.chair_numbers) { %><strong>C:</strong> <%= issue.chair_numbers %><% } %>
                      </small>
                    <% } else { %>
                      <span class="text-muted">N/A</span>
                    <% } %>
                  </td>
                  <td class="text-muted fst-italic"><%= issue.notes %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="10" class="text-center text-muted">No material issues found for the current session.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>