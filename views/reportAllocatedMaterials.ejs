<%- include('partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0"><%= title %></h1>
        <a href="/report" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Report Menu
        </a>
    </div>

    <!-- Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form action="/report/allocated-materials" method="GET" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="q" class="form-label">Search</label>
                    <input type="text" class="form-control" id="q" name="q" value="<%= filters.q %>" placeholder="Exhibitor, Space, SL No...">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Filter</button>
                    <a href="/report/allocated-materials" class="btn btn-secondary ms-2">Clear</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <span>Material Issues</span>
            <a href="/report/allocated-materials/csv?<%- new URLSearchParams(filters) %>" class="btn btn-sm btn-outline-success">
                <i class="bi bi-download me-1"></i> Export CSV
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>SL No</th>
                            <th>Date</th>
                            <th>Exhibitor</th>
                            <th>Space</th>
                            <th class="text-center">Tables</th>
                            <th>Table Numbers</th>
                            <th class="text-center">Chairs</th>
                            <th>Chair Numbers</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (issues.length > 0) { %>
                            <% issues.forEach(issue => { %>
                                <tr>
                                    <td><a href="/material/issue/details/<%= issue.id %>"><%= issue.sl_no %></a></td>
                                    <td><%= new Date(issue.issue_date).toLocaleDateString('en-GB') %></td>
                                    <td><a href="/booking/details-full/<%= issue.booking_id %>"><%= issue.client_name %></a></td>
                                    <td><%= issue.space_name %></td>
                                    <td class="text-center"><%= (issue.table_free || 0) + (issue.table_paid || 0) %></td>
                                    <td style="min-width: 150px;"><%= issue.table_numbers %></td>
                                    <td class="text-center"><%= (issue.chair_free || 0) + (issue.chair_paid || 0) %></td>
                                    <td style="min-width: 150px;"><%= issue.chair_numbers %></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center">No material issues found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>