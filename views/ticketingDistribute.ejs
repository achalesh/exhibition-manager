<%- include('partials/header') %>

<div class="container-fluid mt-4">
    <%- include('partials/ticketingSubNav') %>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3"><%= title %></h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#distributeModal">
            <i class="fas fa-plus"></i> Distribute Tickets
        </button>
    </div>

    <!-- Distributions Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Staff</th>
                            <th>Ride/Rate</th>
                            <th>Ticket # Range</th>
                            <th>Status</th>
                            <th>Settlement Date</th>
                            <th class="text-end">Revenue</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% distributions.forEach(dist => { %>
                            <tr>
                                <td><%= new Date(dist.distribution_date).toLocaleDateString('en-GB') %></td>
                                <td><%= dist.staff_name %></td>
                                <td><%= dist.ride_name %> @ <%= dist.rate.toFixed(2) %></td>
                                <td><%= dist.distributed_start_number %> - <%= dist.distributed_end_number %></td>
                                <td>
                                    <span class="badge <%= dist.status === 'Distributed' ? 'bg-warning text-dark' : 'bg-success' %>">
                                        <%= dist.status %>
                                    </span>
                                </td>
                                <td><%= dist.settlement_date ? new Date(dist.settlement_date).toLocaleDateString('en-GB') : '-' %></td>
                                <td class="text-end"><%= dist.calculated_revenue ? '₹' + dist.calculated_revenue.toLocaleString('en-IN') : '-' %></td>
                                <td>
                                    <% if (dist.status === 'Distributed') { %>
                                        <a href="/ticketing/settle/<%= dist.id %>" class="btn btn-sm btn-success"><i class="fas fa-handshake"></i> Settle</a>
                                        <form action="/ticketing/distribute/cancel/<%= dist.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to cancel this distribution?');">
                                            <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-times"></i> Cancel</button>
                                        </form>
                                    <% } else { %>
                                        <form action="/ticketing/settle/revert/<%= dist.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to revert this settlement? This will affect accounting records.');">
                                            <button type="submit" class="btn btn-sm btn-outline-warning"><i class="fas fa-undo"></i> Revert</button>
                                        </form>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                        <% if (distributions.length === 0) { %>
                            <tr><td colspan="8" class="text-center">No distributions found.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Distribute Modal -->
<div class="modal fade" id="distributeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/ticketing/distribute" method="POST">
                <div class="modal-header"><h5 class="modal-title">Distribute Tickets</h5></div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="staff_id" class="form-label">Staff Member</label>
                        <select name="staff_id" class="form-select" required>
                            <% staff.forEach(s => { %><option value="<%= s.id %>"><%= s.name %></option><% }); %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="ride_id" class="form-label">Ride / Rate</label>
                        <select name="ride_id" class="form-select" required>
                            <% rides.forEach(r => { %><option value="<%= r.id %>"><%= r.name %> - ₹<%= r.rate.toFixed(2) %></option><% }); %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="stock_id" class="form-label">Available Ticket Book</label>
                        <select name="stock_id" class="form-select" required>
                            <option value="">-- Select a ticket book --</option>
                            <% stock.forEach(s => { %>
                                <option value="<%= s.id %>">#<%= s.start_number %> - #<%= s.end_number %> (Rate: ₹<%= s.rate.toFixed(2) %>)</option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="distribution_date" class="form-label">Distribution Date</label>
                        <input type="date" name="distribution_date" class="form-control" value="<%= new Date().toISOString().split('T')[0] %>" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Distribute</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>